<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_design"
    tools:context=".LengthFragment">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:text="@string/app_name"
        android:textColor="@color/magenta"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    <LinearLayout
        android:id="@+id/llt"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/textView1"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_weight="2"
            android:textSize="22sp"
            android:textColor="@color/magenta"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textAllCaps="false"
            android:layout_weight="2"
            android:layout_marginLeft="70dp"
            android:textSize="22sp"
            android:textColor="@color/magenta"
            android:textStyle="bold"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/llt1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/llt"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:popupBackground="@color/magenta_light"
            android:paddingLeft="15dp"
            android:layout_weight="2"
            android:layout_height="50dp"/>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:layout_height="50dp"/>

    </LinearLayout>



    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_below="@id/llt1"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/custom_cursor"
        android:paddingLeft="15dp"
        android:background="@drawable/custom_edittext"
        android:textColor="@color/magenta"
        android:inputType="numberSigned|numberDecimal"
        android:hint="Enter Value"
        android:textColorHint="@color/magenta_dark"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/textView2"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint"
        android:textAlignment="center"
        android:textColor="@color/magenta"
        android:textColorHint="@color/magenta_dark"
        android:layout_below="@id/editText1"
        android:textSize="22sp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/button"
        android:layout_below="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Calculate"
        android:textColor="@color/magenta"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:padding="15dp"
        android:background="@drawable/custom_button"
        android:textSize="22sp"
        android:layout_marginTop="80dp"/>


</RelativeLayout>